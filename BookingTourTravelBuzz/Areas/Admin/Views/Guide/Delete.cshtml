@model BookingTourTravelBuzz.Models.Guides.Guide
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa</h1>

<h3>Bạn có chắc muốn xóa Hướng dẫn viên?</h3>
<div>
    <h4>Guide</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label class="form-label">Họ tên</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FULLNAME_GUIDE)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Vai trò</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ROLE_GUIDE)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Số điện thoại</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PHONE_GUIDE)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Ngày sinh</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BIRTHDAY_GUIDE)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Email</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EMAIL_GUIDE)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Trạng thái</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusGuide)
        </dd>
        <dt class="col-sm-2">
            <label class="form-label">Giới tính</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenderName)
        </dd>
        </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_GUIDE" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="ListGuides">Trang chủ</a>
    </form>
</div>
