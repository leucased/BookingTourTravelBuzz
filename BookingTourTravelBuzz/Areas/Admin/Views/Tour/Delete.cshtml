@model Tour
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Tour</h1>

<h3>Bạn chắc chắn muốn xóa Tour?</h3>
<div>
    <h4>Tour</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label class="form-label">Tên Tour</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NAME_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Giới thiệu</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DESCRIPTION_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Thời gian</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TIME_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Giá</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PRICE_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Khách sạn</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.COUNTRY_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Phương tiện</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TRANSPORTATION_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Khách sạn</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HOTEL_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Điểm đến</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DESTINATION_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Lịch trình</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ITINERARY_TOUR)
        </dd>
        <dt class = "col-sm-2">
            <label class="form-label">Ảnh</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IMAGE_URL)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_TOUR" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a href="/Admin/TourManager/Domestic">Trang chủ</a>
    </form>
</div>
