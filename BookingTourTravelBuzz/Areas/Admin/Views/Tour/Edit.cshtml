@model Tour

@{
    ViewBag.Title = "Chỉnh sửa Tour";
}

<h2>Chỉnh sửa Tour</h2>

@using (Html.BeginForm("Edit", "TourManager", FormMethod.Post, new { area = "Admin" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID_TOUR) <!-- Ẩn ID_TOUR để cập nhật đúng bản ghi -->

    <div class="form-group">
        @Html.LabelFor(model => model.NAME_TOUR)
        @Html.TextBoxFor(model => model.NAME_TOUR, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DESCRIPTION_TOUR)
        @Html.TextAreaFor(model => model.DESCRIPTION_TOUR, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NAME_AREA)
        @Html.TextAreaFor(model => model.NAME_TOUR, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a href="@Url.Action("Index", "TourManager", new { area = "Admin" })" class="btn btn-secondary">Hủy</a>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
