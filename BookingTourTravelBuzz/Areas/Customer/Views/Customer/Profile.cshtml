@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Nếu bạn có layout chung
}
<div style="height: 80px;"></div>

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="list-group shadow-sm">
                <a href="#profile" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user-circle"></i> Hồ sơ cá nhân
                </a>
                <a href="#history" class="list-group-item list-group-item-action">
                    <i class="fas fa-history"></i> Lịch sử đặt tour
                </a>
                <a href="#password" class="list-group-item list-group-item-action">
                    <i class="fas fa-lock"></i> Đổi mật khẩu
                </a>
                <a href="#support" class="list-group-item list-group-item-action">
                    <i class="fas fa-headset"></i> Yêu cầu hỗ trợ
                </a>
                <a href="#notifications" class="list-group-item list-group-item-action">
                    <i class="fas fa-bell"></i> Thông báo
                </a>
            </div>
        </div>

        <!-- Nội dung chính -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="mb-4"><i class="fas fa-user"></i> Thông tin cá nhân</h3>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Họ và tên</label>
                            <input type="text" class="form-control" value="Nguyễn Văn A">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="email@example.com" disabled>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" value="0123456789">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" value="Hà Nội, Việt Nam">
                        </div>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="height: 500px;"></div>


<!-- Thêm FontAwesome để có icon đẹp -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
